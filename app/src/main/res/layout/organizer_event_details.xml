<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/detailImg"
            android:layout_width="360dp"
            android:background="@drawable/edit_text_border"
            android:layout_height="200dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp">
            <TextView
                android:id="@+id/detailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:textStyle="bold"
                android:text="Ten su kien"/>

            <TextView
                android:id="@+id/detailDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="Ngay"/>
            <TextView
                android:id="@+id/detailLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:text="Dia diem"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >

                <TextView
                    android:id="@+id/detailTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textSize="18sp"
                    android:text="Giờ: "/>
                <TextView
                    android:id="@+id/detailSeat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="180dp"
                    android:textSize="18sp"
                    android:text="Chỗ ngồi"/>

            </LinearLayout>

            <TextView
                android:id="@+id/evType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại sự kiện"
                android:layout_marginTop="10dp"
                android:textSize="18sp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả: "
            android:textSize="25dp"
            />

        <TextView
            android:id="@+id/detailDes"
            android:layout_width="370dp"
            android:layout_height="200dp"

            android:layout_marginTop="15dp"
            android:textSize="25dp"
            android:padding="20dp"
            android:background="@drawable/edit_text_border"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/updateEvent"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="Cập nhật"
                android:textSize="20sp"
                android:backgroundTint="#32003A"/>
            <Button
                android:id="@+id/listAttendeeBtn"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="Người tham dự &amp; đặt vé"
                android:textSize="20sp"
                android:backgroundTint="#E243A02D"/>
            <Button
                android:id="@+id/inviteAttendee"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="Mời"
                android:textSize="20sp"
                android:backgroundTint="#0047ab"/>
            <Button
                android:id="@+id/cancelEvent"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:text="Huỷ sự kiện"
                android:textSize="20sp"
                android:backgroundTint="#F20A0A"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F8F9FA">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarEventDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF5722"
        android:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow"
        app:tint="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
        <!-- Header Image với overlay -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280dp">

            <!-- Gradient overlay -->
            <ImageView
                android:id="@+id/detailImg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/placeholder_image"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/gradient_overlay"/>

            <!-- Floating action buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabShare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_share"
                    app:fabSize="mini"
                    app:backgroundTint="#FFFFFF"
                    app:tint="#FF5722"
                   />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/detailLove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_favorite_border"
                    app:fabSize="mini"
                    app:backgroundTint="#FFFFFF"
                    app:tint="#FF5722"/>
            </LinearLayout>
        </RelativeLayout>

        <!-- Content Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-30dp"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Event Title -->
                <TextView
                    android:id="@+id/detailName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên sự kiện"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#1A1A1A"
                    android:lineSpacingExtra="4dp"/>

                <!-- Event Type Badge -->
                <TextView
                    android:id="@+id/evType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Loại sự kiện"
                    android:layout_marginTop="8dp"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/badge_background"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp"/>

                <!-- Event Details Grid -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="24dp">

                    <!-- Date Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_calendar"
                            app:tint="#FF5722"
                            android:layout_marginEnd="16dp"/>

                        <TextView
                            android:id="@+id/detailDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ngày"
                            android:textSize="16sp"
                            android:textColor="#333333"/>
                    </LinearLayout>

                    <!-- Time Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_time"
                            app:tint="#FF5722"
                            android:layout_marginEnd="16dp"/>

                        <TextView
                            android:id="@+id/detailTime"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Giờ"
                            android:textSize="16sp"
                            android:textColor="#333333"/>
                    </LinearLayout>

                    <!-- Location Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_location"
                            app:tint="#FF5722"
                            android:layout_marginEnd="16dp"/>

                        <TextView
                            android:id="@+id/detailLocal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Địa điểm"
                            android:textSize="16sp"
                            android:textColor="#333333"/>
                    </LinearLayout>

                    <!-- Seat Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="8dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_seat"
                            app:tint="#FF5722"
                            android:layout_marginEnd="16dp"/>

                        <TextView
                            android:id="@+id/detailSeat"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Chỗ ngồi"
                            android:textSize="16sp"
                            android:textColor="#333333"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Description Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#FF5722"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mô tả sự kiện"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/detailDes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mô tả chi tiết về sự kiện..."
                    android:textSize="16sp"
                    android:textColor="#FFFFFF"
                    android:lineSpacingExtra="4dp"
                    android:minHeight="100dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Organizer Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:backgroundTint="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Người tổ chức"
                        android:textSize="12sp"
                        android:textColor="#999999"/>

                    <TextView
                        android:id="@+id/creator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tên người tổ chức"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1A1A1A"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_message"
                    app:tint="#FF5722"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingBottom="24dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/detailJoin"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Đặt vé"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="#FF5722"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_ticket"
                app:iconGravity="textStart"
                app:iconPadding="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCalendar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginStart="8dp"
                app:backgroundTint="#77FF77"
                app:cornerRadius="28dp"
                app:icon="@drawable/ic_calendar"
                app:iconTint="#023C04"
                app:iconGravity="textStart"
                style="@style/Widget.Material3.Button.OutlinedButton"/>
        </LinearLayout>
</LinearLayout>
</ScrollView>